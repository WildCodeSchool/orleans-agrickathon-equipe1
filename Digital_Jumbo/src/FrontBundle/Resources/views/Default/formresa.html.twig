{% extends 'layoutFormResa.html.twig' %}

{% block formResa %}
    <div class="container">
        <script>
            $( function() {
                $( "#datepicker" ).datepicker();
            } );
        </script>
        <form>
            <div class="form-group">
                <label for="exampleInputDate">Date souhaité</label><br/>
                <input type="text" id="datepicker">
            </div>
            <div class="form-group">
                <label for="exampleInputActi">Activité(s) choisi(s)</label><br/>
                <input type="radio" name="batiment" value="batiment" checked> Visite des batiments<br>
                <input type="radio" name="materiel" value="materiel"> Visite du parc matériel<br>
                <input type="radio" name="tracteur" value="tracteur"> Tour en tracteur<br/>
                <input type="radio" name="traite" value="traite"> Traite<br/>
            </div>
            <div class="form-group">
                <label for="exampleInputName">Nom</label>
                <input type="name" class="form-control" id="exampleInputName" placeholder="Nom">
            </div>
            <div class="form-group">
                <label for="exampleInputPrenom">Prenom</label>
                <input type="prenom" class="form-control" id="exampleInputPrenom" placeholder="Prenom">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Adresse Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="exampleInputTel">Téléphone</label>
                <input type="tel" class="form-control" id="exampleInputTel" placeholder="06 ## ## ## ##">
            </div>
            <div class="form-group">
                <label for="exampleInputAdult">Nombre d'adultes</label>
                <input type="number" class="form-control" id="exampleInputAdult" placeholder="2">
            </div>
            <div class="form-group">
                <label for="exampleInputChild">Nombre d'enfants</label>
                <input type="number" class="form-control" id="exampleInputChild" placeholder="3">
            </div>
            <button type="button" class="btn-lg btn-primary" onclick="alert('Merci de votre reservation. Vous recevrez un mail de confirmation dans ' +
             'moins de 24h.')">Reservé</button>
        </form>
    </div>
{% endblock %}